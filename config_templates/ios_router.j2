hostname {{ hostname }}

!DNS server config
{% for server in servers %}
ip name-server {{ server.IP }}
{% endfor %}

ip domain-name {{ domain_name }}

aaa new-model
aaa authentication login default local
aaa authorization exec default local

{% for vrf in vrfs %}
ip vrf {{ vrf.name }}
{% endfor %}

ip access-list standard VTY-Sec
 10 permit {{ LAN_net }}
 20 permit {{ LAB_net }}
 30 permit {{ MGMT_net}}
 40 deny any log

line vty 0 4
 transport input ssh
 exec-timeout 35
line vty 5 15
exec-timeout 35
 transport input ssh

no ip http server
no ip http secure-server
netconf ssh